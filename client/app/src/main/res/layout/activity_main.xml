<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.surendramobiya.client.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t1"
        android:layout_below="@+id/stopbtn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp"
        android:maxLines = "500"
        android:scrollbars = "vertical"
        android:layout_alignEnd="@+id/stopbtn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ip"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="192.168.1.4"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:id="@+id/startbtn"
        android:layout_below="@+id/delay"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/delay" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delay"
        android:text="3"
        android:layout_below="@+id/port"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/port" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop"
        android:id="@+id/stopbtn"
        android:layout_below="@+id/startbtn"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/startbtn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/port"
        android:text="5000"
        android:layout_below="@+id/ip"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/ip" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debugging"
        android:id="@+id/debugging"
        android:layout_below="@+id/stopbtn"
        android:layout_alignParentStart="true"
        android:checked="false" />

</RelativeLayout>
